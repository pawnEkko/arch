exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet


#自己配置的开机启动

# 设置自动连接外部显示器 并设置以什么分辨率启动
# 可以在终端中输入 xrandr 这个指令来查看连接了哪些显示器
# exec exec_always --output 显示器名称 --mode 分辨率

# 输入法
exec --no-startup-id fcitx-autostart
exec --no-startup-id fcitx5 -d

# picom
exec_always --no-startup-id picom --experimental-backends

# feh壁纸软件
# 直接设置对应目录中的某一张图片作为壁纸
exec_always --no-startup-id feh --bg-fill ~/Download/壁纸/759f6d6c376a2494324b54e23ca1d0eb.jpg
# 设置每次开机自动从对应目录选择一张图片作为壁纸
